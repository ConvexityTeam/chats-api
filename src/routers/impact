const router = require('express').Router();

const {
  Auth,
  NgoAdminAuth,
  IsOrgMember,
  IsRecaptchaVerified
} = require('../middleware'); //Auhorization middleware
const {AuthController, ImactReportController} = require('../controllers');
const {
  AuthValidator,
  CampaignValidator,
  ParamValidator,
  FileValidator
} = require('../validators');
const ImpactReportController = require('../controllers/ImpactReportController');

router.post('/create-report/', ImpactReportController.createReport);

